<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/icon_warehouse"/>

        <TextView
            android:id="@+id/textView_title_view_clothe_warehouse"
            android:layout_width="421dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/textView_title_view_clothe"
            android:textAlignment="viewStart"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="779dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_view_clothe_warehouse"
            android:layout_width="143dp"
            android:layout_height="381dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_styler" />

        <RelativeLayout
            android:layout_width="480dp"
            android:layout_height="339dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView_title_name_clothe_warehouse"
                android:layout_width="459dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_size_clothe_warehouse"
                android:layout_width="235dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="116dp"
                android:layout_marginBottom="239dp"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_title_size_clothe_warehouse"
                android:layout_width="94dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="63dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_title_color_clothe_warehouse"
                android:layout_width="104dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="106dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_take_out_clothe_warehouse"
                android:layout_width="428dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="88dp"
                android:backgroundTint="@color/light_beige"
                android:drawableLeft="@drawable/icon_take_out"
                android:text="@string/button_take_out_clothe" />

            <TextView
                android:id="@+id/textView_color_clothe_warehouse"
                android:layout_width="232dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="119dp"
                android:layout_marginBottom="193dp"
                android:text="TextView"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_add_cart_warehouse"
                android:layout_width="428dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="27dp"
                android:drawableLeft="@drawable/icon_shopping_bag"
                android:text="@string/button_add_cart" />

            <TextView
                android:id="@+id/textView_title_price_clothe_warehouse"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="365dp"
                android:layout_marginBottom="150dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_price_clothe_warehouse"
                android:layout_width="231dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="119dp"
                android:layout_marginBottom="149dp"
                android:text="TextView"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>