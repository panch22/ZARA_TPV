<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/icon_modify_watch"/>

        <TextView
            android:id="@+id/textView_title_view_clothe"
            android:layout_width="421dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/textView_title_view_clothe"
            android:textAlignment="viewStart"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="779dp"
        android:layout_height="404dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_view_clothe"
            android:layout_width="143dp"
            android:layout_height="381dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_styler" />

        <RelativeLayout
            android:layout_width="480dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_title_name_clothe"
                android:layout_width="504dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="58dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView_title_size_clothe"
                android:layout_width="92dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="116dp"
                android:text="TextView" />

            <Spinner
                android:id="@+id/spinnerSize"
                android:layout_width="316dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="116dp"
                android:layout_marginEnd="37dp"
                tools:ignore="SpeakableTextPresentCheck" />


            <TextView
                android:id="@+id/textView_title_color_clothe"
                android:layout_width="92dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="189dp"
                android:text="TextView" />

            <Spinner
                android:id="@+id/spinnerColor"
                android:layout_width="314dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="189dp"
                android:layout_marginEnd="37dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button_modify_clothe"
                android:layout_width="197dp"
                android:layout_height="53dp"
                android:layout_below="@+id/spinnerColor"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="263dp"
                android:layout_marginBottom="86dp"
                android:backgroundTint="@color/light_beige"
                android:drawableLeft="@drawable/icon_modify"
                android:text="@string/button_modify_clothe" />

            <Button
                android:id="@+id/button_delete_clothe"
                android:layout_width="197dp"
                android:layout_height="53dp"
                android:layout_below="@+id/spinnerColor"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="224dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="59dp"
                android:layout_marginBottom="87dp"
                android:backgroundTint="@color/light_beige"
                android:drawableLeft="@drawable/icon_delete"
                android:text="@string/button_delete_clothe" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>