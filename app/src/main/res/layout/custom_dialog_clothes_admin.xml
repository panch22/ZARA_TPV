<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/icon_warehouse"/>

        <TextView
            android:id="@+id/textView_title_view_clothe_admin"
            android:layout_width="421dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/textView_title_view_clothe"
            android:textAlignment="viewStart"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="779dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_view_clothe_admin"
            android:layout_width="143dp"
            android:layout_height="381dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_styler" />

        <RelativeLayout
            android:layout_width="480dp"
            android:layout_height="339dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_title_name_clothe_admin"
                android:layout_width="459dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_title_size_clothe_admin"
                android:layout_width="94dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="113dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_title_color_clothe_admin"
                android:layout_width="104dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="62dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_delete_clothe_admin"
                android:layout_width="428dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="88dp"
                android:backgroundTint="@color/light_beige"
                android:drawableLeft="@drawable/icon_delete"
                android:text="@string/button_delete_clothe_admin" />

            <TextView
                android:id="@+id/textView_color_clothe_admin"
                android:layout_width="232dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="112dp"
                android:layout_marginBottom="238dp"
                android:text="TextView"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_modify_clothe_admin"
                android:layout_width="428dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="27dp"
                android:drawableLeft="@drawable/icon_modify"
                android:text="@string/button_modify_clothe_admin" />

            <TextView
                android:id="@+id/textView_title_price_clothe_admin"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="359dp"
                android:layout_marginBottom="150dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_price_clothe_admin"
                android:layout_width="231dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="113dp"
                android:layout_marginBottom="148dp"
                android:hint="@string/editText_hint_price"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_size_admin"
                android:layout_width="234dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="103dp"
                android:layout_marginEnd="112dp"
                android:layout_toEndOf="@+id/textView_title_size_clothe_admin"
                tools:ignore="SpeakableTextPresentCheck" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>