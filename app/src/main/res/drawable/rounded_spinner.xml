<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <padding android:right="15dp"
                        android:left="15dp"
                        android:top="15dp"
                        android:bottom="15dp"/>
                    <corners
                        android:radius="15dp"/>
                    <stroke android:width="1dip" android:color="@color/light_beige" />
                </shape>
            </item>
            <item
                android:drawable="@drawable/arrow_down"
                android:gravity="end"/>
        </layer-list>
    </item>
</selector>